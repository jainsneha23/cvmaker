<!DOCTYPE HTML>
<html>
  <head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="description" content="make your resume easy with designs and templates, and download it in pdf, absolutely free">
    <meta name="keywords" content="resume maker,free resume maker,free cv maker,cv maker, resume builder, cv builder,free, career">
    <meta name="author" content="Sneha Jain">
    <base href="" />
    <title>Instant CV Maker</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1" />
    <link rel="shortcut icon" href='/images/favicon.png' />
    <link rel="stylesheet" type="text/css" href="${data.mainCssBundle}">
    <style type="text/css">
      #social {
        position: fixed;
        bottom: 70px; right:0;
        z-index: 2;
        height: 100px;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
      }
      .drawer {
        right: -67px;
        position: absolute;
        bottom: 0px;
        background: #fff;
        width: 50px;
        height: 110px;
        border: 1px solid #40a7ba;
        border-right: 0;
        padding: 8px;
        border-top-left-radius: 4px;
        transition: right 0.5s;
      }
      #toggle {opacity: 0;}
      #toggle + .toggle {
        background-color: #40a7ba;
        display: block;
        background-repeat: no-repeat;
        background-size: contain;
        width: 45px;
        height: 45px;
        opacity: 1;
        position: absolute;
        bottom: 0; right: 0;
        padding: 5px;
        transition: right 0.5s;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
      }
      #toggle + .toggle span {
        display: block;
        height:35px;width: 35px;
        background: url(/assets/images/like.png) no-repeat;
        background-size: contain;
      }
      #toggle:checked + .toggle {
        right: 67px;
      }
      #toggle:checked + .toggle + .drawer{
        right: 0;
      }
    </style>
  </head>
  <body>
    <div id="fb-root"></div>
    <script if(data.env === "production")>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '150860672153783',
          cookie     : true,
          xfbml      : true,
          version    : 'v2.8'
        });
        FB.AppEvents.logPageView();   
      };
      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = '//connect.facebook.net/en_US/sdk.js';
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="app"></div>
    <div id="social">
      <input type="checkbox" id="toggle" />
      <label for="toggle" class="toggle"> <span/> </label>
      <div class="drawer">
        <div class="fb-like" data-href="https://www.facebook.com/instantCvMaker/" data-width="25" data-layout="box_count" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>
      </div>
    </div>
    <script src="${data.vendorJsBundle}"></script>
    <script src="${data.mainJsBundle}"></script>
    <script if(data.env === "production")>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m);
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-64292987-1', 'auto');
      ga('send', 'pageview');
    </script>
    <script>
      window.__SERVER_DATA__ = ${data.serverVars};
      if (window.opener) {
        window.opener.focus();

        if(window.opener.loginCallBack) {
          window.opener.loginCallBack(${data.serverVars});
        }

        window.close();
      }
      
      function loginCallBack(data) {
        window.__SERVER_DATA__ = data;
      }
    </script>
  </body>
</html> 
